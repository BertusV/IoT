        <Button Content="Bottom Left" Click="BottomLeftButton" Width="80" Height="80" Canvas.Left="59" Canvas.Top="231"/>
        <Button Content="Bottom Right" Click="BottomRightButton" Width="80" Height="80" Canvas.Left="409" Canvas.Top="231"/>

        <Button Content="Stepper Left" Click="StepperLeftButton" Width="80" Height="80" Canvas.Left="59" Canvas.Top="331"/>
